{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    // "baseUrl": "./src",
    "paths": {
      "@components": ["./src/components"],
      "@constants": ["./src/constants"],
      "@store": ["./src/store"],
      "@contexts": ["./src/contexts"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@MyTypes": ["./src/types"],
      "@MyTypes/*": ["./src/types/*"],
      "@configs/*": ["./src/configs/*"],
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@constants/*": ["./src/constants/*"],
      "@utils/*": ["./src/utils/*"],
      "@services": ["./src/services"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@": ["./src"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
